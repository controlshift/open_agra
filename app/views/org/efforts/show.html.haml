= title "\"#{@effort.title}\" Effort"
%br
= link_to 'Edit', edit_org_effort_path(@effort), class: "btn left use-pjax", id: 'edit-effort'
.clear

%h4.mt20
  Public Effort Homepage
  .well
    = link_to effort_url(@effort), effort_path(@effort)

%h4
  Public New Petition Page
  .well
    = link_to new_effort_petition_url(effort_id: @effort.slug), new_effort_petition_url(effort_id: @effort.slug)

%h4
  Petitions

- if @petitions.any?
  = table_for(@petitions) do |t|
    = t.data do
      - t.cell(:title) { |p| link_to(p.title, petition_path(p), class: petition_class(p)) }
      - t.cell(:total_signatures) { |p| p.cached_signatures_size }
      - t.cell(:created_by) { |p| p.user.nil? ? "[No User]" : link_to(p.user.full_name, edit_admin_user_path(p.user)) }
      - t.cell(:created_at) { |p| p.created_at > 1.week.ago ? distance_of_time_in_words(Time.now, p.created_at) + " ago" : p.created_at.strftime("%Y-%m-%d %H:%M") }
      - t.cell(:admin_status)
  = will_paginate @petitions
- else
  No petitions yet for this effort.
