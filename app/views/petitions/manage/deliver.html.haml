- content_for :sidebar do
  = render partial: "manage_menu_bar", locals: {highlight_id: "manage-deliver"}
.manage-deliver
  .row
    .span9
      = manage_title "Deliver Your Petition"

      %br

      .row
        .span5
          = link_to "Download Printable Petition PDF", download_letter_petition_manage_path, class: "btn btn-primary left", id: 'download-letter'

        - if !current_organisation.hide_signatures_csv_download_link?
          .span3
            or download a
            = link_to "csv export of signatures", petition_signatures_path(@petition, format: :csv), id: 'export-signatures'

      %br
      %hr
      =cf('petition_manage_delivery_content')

      :coffeescript
        $ ->
          pages.deliver.initialize()
- content_for :end_of_body do
  = render partial: "petitions/view/email_template"
